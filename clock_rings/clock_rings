	lua_draw_hook_pre='clock_rings',

	---------------------------------------
	-- FONT/COLOR VARIABLES
	---------------------------------------
	default_color='21232b',
	color1='383c4a',
	template1=[[${font Ubuntu:size=11}${color}]],			-- Disks
	template2=[[${font Ubuntu:size=15}${color1}]],			-- Large title
	template3=[[${font Ubuntu:size=14}${color1}]],			-- Large value/smaller title
	template4=[[${font Ubuntu:size=13}${color1}]],			-- Smaller value
	template5=[[${font Ubuntu:size=32}${color1}]],			-- Time
	template6=[[${font Ubuntu:light:size=20}${color}]],		-- Data
	template7=[[${font Ubuntu:size=10}${color}]],			-- Mem/Cpu
	template8=[[wlp3s0]],									-- Wireless interface
	template9=[[enp2s0]],									-- LAN interface
	template0=[[${if_existing /sys/class/net/${template8}/operstate up}${downspeed ${template8}}${else}${if_existing /sys/class/net/${template9}/operstate up}${downspeed none}${else}${endif}${endif}]]
};

